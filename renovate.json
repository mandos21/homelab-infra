{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "extends": [
    "config:recommended",
    ":pinDigestsDisabled"
  ],
  "timezone": "America/New_York",
  "dependencyDashboard": true,

  "includePaths": [
    "stacks/**"
  ],

  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "docker minor/patch updates"
    }
  ]
}

